{
  "name": "seed-store-electron",
  "version": "0.1.0",
  "description": "Desktop application for Seed Store - Inventory Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "seed-store",
    "inventory",
    "pos",
    "desktop"
  ],
  "author": "Seed Store Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "37.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.seedstore.desktop",
    "productName": "Seed Store",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "choukseaaryan",
      "repo": "seed-store"
    },
    "files": [
      "main.js",
      "preload.js",
      "config.js",
      "server-manager.js",
      "assets/**/*",
      {
        "from": "../client/dist",
        "to": ".",
        "filter": [
          "**/*",
          "!**/*.map"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "../server/dist",
        "to": "server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/package.json",
        "to": "server/package.json"
      },
      {
        "from": "../server/prisma",
        "to": "server/prisma",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
