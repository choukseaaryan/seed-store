{
  "name": "seed-store-electron",
  "version": "1.0.0",
  "description": "Desktop application for Seed Store - Inventory Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "seed-store",
    "inventory",
    "pos",
    "desktop"
  ],
  "author": "Seed Store Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.seedstore.desktop",
    "productName": "Seed Store",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../client/dist/**/*",
      "!../client/dist/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../server/dist",
        "to": "server",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
