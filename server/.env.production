# Production environment variables for embedded server
NODE_ENV=production
PORT=3001

# Database configuration for production
# Using SQLite for standalone distribution
DATABASE_URL="file:./seed-store.db"

# CORS configuration
CLIENT_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application settings
API_PREFIX="api"
SWAGGER_ENABLED=false

# Logging
LOG_LEVEL="warn"
